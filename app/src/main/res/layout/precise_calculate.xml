<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/preciseCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精确计算"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/month"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:text="月份:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintBottom_toTopOf="@+id/pretax_income"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/stay_img"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="63dp"
        android:background="@drawable/set_month_button_stay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"/>

    <Button
        android:id="@+id/month_1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="1"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/month"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"/>

    <Button
        android:id="@+id/month_2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="2"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintLeft_toRightOf="@+id/month_1"/>

    <Button
        android:id="@+id/month_3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="3"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintLeft_toRightOf="@+id/month_2"/>

    <Button
        android:id="@+id/month_4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="4"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintLeft_toRightOf="@+id/month_3"/>

    <Button
        android:id="@+id/month_5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="5"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintLeft_toRightOf="@+id/month_4"/>

    <Button
        android:id="@+id/month_6"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="6"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/preciseCalculation"
        app:layout_constraintLeft_toRightOf="@+id/month_5"/>

    <Button
        android:id="@+id/month_7"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="7"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/month_1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/month_8"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="8"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_2"
        app:layout_constraintLeft_toRightOf="@+id/month_7"/>

    <Button
        android:id="@+id/month_9"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="9"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_3"
        app:layout_constraintLeft_toRightOf="@+id/month_8"/>

    <Button
        android:id="@+id/month_10"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="10"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_4"
        app:layout_constraintLeft_toRightOf="@+id/month_9"/>

    <Button
        android:id="@+id/month_11"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="11"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_5"
        app:layout_constraintLeft_toRightOf="@+id/month_10"/>

    <Button
        android:id="@+id/month_12"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="12"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_6"
        app:layout_constraintLeft_toRightOf="@+id/month_11"/>

    <Button
        android:id="@+id/month_total"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="总"
        android:textSize="15dp"
        android:background="@drawable/set_month_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/month_6"
        app:layout_constraintLeft_toRightOf="@+id/month_12"/>

    <Button
        android:id="@+id/precise_calculate"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        android:text="计算"
        android:background="@drawable/set_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/preciseCalculation"/>

    <Button
        android:id="@+id/precise_clean"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:text="清除"
        android:background="@drawable/set_button"
        app:layout_constraintTop_toBottomOf="@id/precise_calculate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/preciseCalculation"/>

    <ScrollView
        android:id="@+id/precise_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@+id/month_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/precise_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>